<div class="col-12 p-5 header {{ image is defined ? 'more' : '' }}" {% if image is defined %} style="background-image: url('/uploads/posts/{{ image }}')" {% endif %}>
    {% if image is defined %}
        <div class="header-backdrop"></div>
    {% endif %}
    <div style="position: relative; z-index: 2">
        <div class="row">
            <a href="javascript:window.history.back();">
            {#<a href="{{ app.request.headers.get('referer') }}">#}
                <i class="fas fa-2x fa-arrow-circle-left" style="color: #ebeaea;"></i>
            </a>
        </div>
        <div class="row justify-content-center pt-5">
            <h1 class="display-3 text-center" style="color: #ebeaea;">{{ title }}</h1>
        </div>
    </div>
</div>

