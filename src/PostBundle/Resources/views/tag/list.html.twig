{% set total = 0 %}
{% for category in categories %}
    {% set total = total + 1 %}
{% endfor %}

<div class="row mt-0 mb-4">
    <h3 class="h4 col-12 text-center">Tags</h3>
    <div class="col-12 text-center">
        <div class="row justify-content-center {{ total > 6 ? 'owl-carousel owl-theme' : '' }}">
            {% for category in categories %}
                <div class="col-auto item">
                    <p class="small tags {{ active is defined and category.id == active.id ? 'active' : '' }}">
                        <a href="{{ path('categories_show', {'id': category.id}) }}" class="">{{ category.name }}</a>
                    </p>
                </div>
            {% endfor %}
        </div>
    </div>
</div>
