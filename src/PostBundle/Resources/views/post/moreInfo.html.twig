<span class="small text-muted">
    <i class="far fa-clock"></i>&nbsp;{{ post.createdAt|date('d') }}
    <a href="">{{ post.createdAt|date('M, Y') }}</a> {{ post.createdAt|date('H:i') }}
</span>
&nbsp;&nbsp;<br class="d-block d-md-none">
<span class="small text-muted">
    <i class="fas fa-user"></i>&nbsp;
    {% if post.user %}
    <a href="{{ path('profile', {'slug': post.user.usernameCanonical}) }}">{{ post.user }}</a>
    {% endif %}
</span>
&nbsp;&nbsp;<br class="d-block d-md-none">
<span class="small text-muted">Category: <a href="{{ path('categories_show', {'id': post.category.id}) }}" class="">{{ post.category }}</a></span>
<br>
<span class="small text-muted"><i class="fas fa-eye"></i>&nbsp;{{ post.ips.count }}</span>
&nbsp;&nbsp;
<span class="small text-muted"><i class="fas fa-comment-alt"></i>&nbsp;<span id="count-of-comments">{{ post.comments.count }}</span></span>
&nbsp;&nbsp;
<span class="small text-muted">
                <i class="fas fa-tags"></i> Tags:
    {% for tag in post.tags %}
        <a class="" href="{{ path('tag_show', { 'slug': tag.slugName }) }}"><u>{{ tag.name }}</u></a>
    {% endfor %}
</span>
<div class="mb-4"></div>